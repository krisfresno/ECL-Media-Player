        show = function(name){
            var image = document.getElementById("dropzone");
            var titre = document.getElementById("titre")
            titre.innerHTML = "<h2>"+name+"</h2>"
            source = "/images/"+name;
            image.src = source;
            actual_photo = name;

        }
		show_images_album=function(names){
					names=JSON.parse(names);
