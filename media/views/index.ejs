        precedent = function(){
            if (flag == true){
                var index = liste_photos.photos.indexOf(actual_photo);
                if (index != 0) {
                    var image = document.getElementById("dropzone");
                    name = liste_photos.photos[index-1];
                    var titre = document.getElementById("titre")
                    titre.innerHTML = "<h2>"+name+"</h2>"
                    source = "/images/"+name;
                    image.src = source;
                    actual_photo = name;
                }        
            }      
        }
        presentation = function(){
            var t = 3;
            if (flag == true) {
                var index = liste_photos.photos.indexOf(actual_photo);
                var size = liste_photos.photos.length;
                var cont = 0;
                var image = document.getElementById("dropzone");
                var titre = document.getElementById("titre");
                if (index != size-1) {
                    for (var i = index; i < size - 1; i++) {
                    let k = i;
                    setTimeout(function(){
                        name = liste_photos.photos[k+1];
                        titre.innerHTML = "<h2>"+name+"</h2>";
                        source = "../images/"+name;
                        image.src = source;   
                    }, 1000*t + 1000*t*cont);
                    cont += 1;
                    }
                }
            }       
        }

        next = function(){
            if (flag == true){
                var index = liste_photos.photos.indexOf(actual_photo);
                var size = liste_photos.photos.length;
                if (index < size-1) {
                    var image = document.getElementById("dropzone");
                    name = liste_photos.photos[index+1];
                    var titre = document.getElementById("titre");
                    titre.innerHTML = "<h2>"+name+"</h2>";
                    source = "../images/"+name;
                    image.src = source;
                    actual_photo = name;  
